-# Sites template
%script{type: "text/html", id: "map-sites-template"}
  <!-- ko foreach: sites -->
  %tr
    %td.siteCell{ko(click: '$root.selectSite', css: {grayselected: "$data == $root.selectedSite()"})}
      %div{ko(style: {marginLeft: "'' + (($parent.level + 1) * 20) + 'px'", width: "'' + (240 - ($parent.level + 1) * 20) + 'px'"}, attr: {title: :highlightedName}),style:'float:left; margin-top:0px; margin-bottom:0px;padding:0px;padding-top:10px; width:240px; height:30px'}
        %span{ko(html: :highlightedName)}
      %button.enterRow.farrow{ko(click: '$root.editSite'), type: "button"}
  <!-- /ko -->
