-# Sites template
%script{type: "text/html", id: "map-sites-template"}
  <!-- ko foreach: sites -->
  %tr
    %td
      %div{ko(css: {greyback: "$data == $root.selectedSite()"}), style: 'padding-left:2px;margin-top:5px;margin-left:8px;'}
        %p.elipsis{ko(style: {marginLeft: "'' + (($parent.level + 1) * 20) + 'px'"}, click: '$root.selectSite'), style: 'cursor: pointer; width: 225px'}
          %span.stat-r
          %span{ko(html: :highlightedName)}
      %button.farrow{ko(click: '$root.editSite'), type: "button"}
  <!-- /ko -->

