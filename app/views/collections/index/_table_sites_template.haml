-# Sites template
%script{type: "text/html", id: "table-sites-template"}
  <!-- ko foreach: sites -->
  %tr
    %td
      %a{ko(style: {marginLeft: "'' + (($parent.level + 1) * 20) + 'px'"}, click: '$root.selectSite')}
        / %span.stat-r
        %span{ko(html: :highlightedName)}
      %button.farrow{ko(click: '$root.editSite'), type: :button}
    %td.padded
      %span{ko(html: :highlightedLat)}
    %td.padded
      %span{ko(html: :highlightedLng)}
    <!-- ko foreach: $root.currentCollection().layers() -->
    <!-- ko foreach: fields -->
    %td.padded
      %span{ko(attr: "{ title: $parents[1].highlightedPropertyValue($data) }", html: "$parents[1].highlightedPropertyValue($data)"), style: 'vertical-align:top'}
    <!-- /ko -->
    <!-- /ko -->
    %td.timeago.padded{ko(attr: "{title: updatedAt}", text: :updatedAtTimeago)}
    %td.padded
  <!-- /ko -->
