-# Sites template
%script{type: "text/html", id: "table-sites-template"}
  /ko foreach: sites
  %tr
    %td.siteCell
      %div
        %a{ko(style: {marginLeft: "'' + (($parent.level + 1) * 20) + 'px'", width: "'' + (240 - ($parent.level + 1) * 20) + 'px'"})}
          %span{ko(html: :highlightedName)}
      %button.enterRow.farrow{ko(click: '$root.editSite'), type: :button}
    %td.padded
      %span{ko(html: :highlightedLat)}
    %td.padded
      %span{ko(html: :highlightedLng)}
    /ko foreach: $root.currentCollection().fieldsByLayers()
    %td.padded
      %span{ko(attr: "{ title: $parent.highlightedPropertyValue($data) }", html: "$parent.highlightedPropertyValue($data)"), style: 'vertical-align:top'}
    //ko
    %td.timeago.padded{ko(attr: "{title: updatedAt}", text: :updatedAtTimeago)}
    %td.padded
  //ko
