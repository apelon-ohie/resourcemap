- if single_editing_mode
  %input.autocomplete-site-input.ux-search{ ko(autocomplete: :valueUI, hasfocus: true, event: {keydown: :keyPress, blur: :save }, source: "$root.currentCollection().searchSitesUrl()"), type: :text }
- else
  %input.autocomplete-site-input.ux-search{ ko(autocomplete: :valueUI, source: "$root.currentCollection().searchSitesUrl()"), type: :text }
