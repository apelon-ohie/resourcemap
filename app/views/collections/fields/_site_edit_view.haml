- if single_editing_mode
  = ko_html_field_tag :valueUI, hasfocus: true, event: {blur: :closeAutocompleteAndSave}, attr: {id: "esCode"}, html: {class: "autocomplete-site-input" }
- else
  = ko_html_field_tag :valueUI, hasfocus: true, event: {keydown: :keyPress}, attr: {id: "'site-autocomplete-input-' + esCode"}, html: {class: "autocomplete-site-input" }
