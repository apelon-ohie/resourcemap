- if single_editing_mode
  %input.ux-search{ ko(autocomplete: :value, value: :value, hasfocus: true, source: '$root.currentCollection().searchUsersUrl()', event: { keydown: :keyPress, blur: :save }), valueUpdate: :afterkeydown, type: :text }
- else
  %input.ux-search{ ko(autocomplete: :value, value: :value, source: '$root.currentCollection().searchUsersUrl()'), valueUpdate: :afterkeydown,  type: :text }
