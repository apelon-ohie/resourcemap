- if single_editing_mode
  %input.ux-search{ ko(autocomplete: :value, hasfocus: true, source: '$root.currentCollection().searchUsersUrl()', event: { keydown: :keyPress, blur: :save }), type: :text }
- else
  %input.ux-search{ ko(autocomplete: :value, source: '$root.currentCollection().searchUsersUrl()'), type: :text }
